<h1>Post Listing</h1>

<%= link_to "New Article", new_article_path %>

<table>
  <tr>
    <th>Date</th>
    <th>Title</th>
    <th>Text</th>
  </tr>
  
  <% @articles.each do |article| %>
    <tr>
      <td><%= format_date_time(article.created_at) %>
      <td><%= link_to article.title, article_path(article) %></td>
      <td><%= article.text %></td>
    </tr>
  <% end %>
</table>